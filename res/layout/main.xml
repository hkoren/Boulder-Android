<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layout_centerVertical="true"
    >
    
    <ImageView
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:id="@+id/background_image"
    	android:scaleType="centerCrop"
    	android:src="@drawable/boulderapp"
    	/>
    	<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Boulder Colorado"
    android:textStyle="bold"
    android:textSize="16pt"
    android:textColor="#000000"
	android:layout_centerVertical="true"
    android:id="@+id/boco"
    android:layout_alignTop="@id/background_image"
    
    />
    	<TextView  
    	
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@string/description"
    android:textSize="7pt"
    android:textColor="#ffffff"
    android:background="#44000000"
    android:gravity="center_vertical"
    android:id="@+id/description"
    android:paddingLeft="5sp"
    android:paddingRight="5sp"
    android:paddingTop="10sp"
    android:paddingBottom="10sp"
    android:layout_below="@id/boco"
    />
    	
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15sp"
    android:gravity="bottom"
    android:paddingRight="15sp"
    android:layout_below="@id/boco"
    android:paddingTop="10sp"
    android:layout_alignBottom="@id/background_image"
    >
    
    <Button
    android:id="@+id/meetup_group"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="BA Meetup Group"
    />
    <Button
    android:id="@+id/follow_twitter"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Follow @BoulderAndroid"
    />
    <Button
    android:id="@+id/dot_com"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="BoulderAndroid.com"
    />
    </LinearLayout>
</RelativeLayout>